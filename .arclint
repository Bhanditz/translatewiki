{
  "exclude": [
    "(^externals/)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "generated": {
      "type": "generated"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "phutil-library": {
      "type": "phutil-library",
      "include": "(\\.php$)"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "exclude": [
        "(^src/(.*/)?__tests__/[^/]+/.*\\.(txt|json))",
        "(\\.json)"
      ]
    },
    "text-without-length": {
      "type": "text",
      "include": [
        "(^src/(.*/)?__tests__/[^/]+/.*\\.(txt|json))"
      ],
      "severity": {
        "3": "disabled"
      }
    },
    "xhpast": {
      "type": "xhpast",
      "include": "(\\.php$)",
      "standard": "phutil.xhpast"
    }
  }
}
